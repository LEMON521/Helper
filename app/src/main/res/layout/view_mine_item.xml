<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/view_mine_information_iv_left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/view_mine_information_tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c3"
            android:textSize="@dimen/tv_middle" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="6">

        <ImageView
            android:id="@+id/view_mine_information_iv_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/view_mine_information_tv_right"
            android:layout_toStartOf="@+id/view_mine_information_tv_right" />

        <TextView
            android:id="@+id/view_mine_information_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/c9"
            android:textSize="@dimen/tv_small" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/image_right" />

    </RelativeLayout>
</LinearLayout>